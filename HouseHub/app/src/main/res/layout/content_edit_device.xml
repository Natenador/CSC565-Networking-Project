<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/houseHubBackground">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="@dimen/below_header"
        android:text="Device Name"
        android:id="@+id/device_name"
        android:textColor="@color/houseHubForeground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_device_name"
        android:layout_gravity="right"
        android:textColor="@color/userInputForeground"
        android:background="@color/userInputBackground"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IP Address"
        android:id="@+id/ip_address"
        android:textColor="@color/houseHubForeground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_ip_address"
        android:textColor="@color/userInputForeground"
        android:background="@color/userInputBackground"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Socket Number"
        android:id="@+id/socket_num"
        android:textColor="@color/houseHubForeground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_socket_num"
        android:textColor="@color/userInputForeground"
        android:background="@color/userInputBackground"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="App Name"
        android:id="@+id/app_name"
        android:textColor="@color/houseHubForeground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_app_name"
        android:textColor="@color/userInputForeground"
        android:background="@color/userInputBackground"/>


</LinearLayout>
